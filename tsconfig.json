{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react",                               
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": "src",
    "allowJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strict": true,
    "include": ["src"]
  }
}
